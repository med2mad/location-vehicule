        <header class="site-navbar site-navbar-target mb-0" role="banner">

            <div class="container">
                <div class="row align-items-start position-relative">

                    <div class="col-3">
                        <div class="site-logo ">
                            <a href="index"><img class="normal-logo" src="~/logo.png" style="width: 200px;" alt="logo"></a>
                        </div>
                    </div>

                    <div class="col-9  text-right">
                        <span class="d-inline-block d-lg-none"><a href="#" class=" site-menu-toggle js-menu-toggle py-5 "><span class="icon-menu h3 text-black"></span></a></span>
                        
                        <nav class="site-navigation text-right ml-auto d-none d-lg-block" role="navigation">
                            <ul class="site-menu main-menu js-clone-nav ml-auto" >
                                <li class="active"><a href="index" class="nav-link" style="color:white;">Accueil</a></li>
                                <li><a href="listing" class="nav-link" style="color:white;">Véhicules</a></li>
                                <li><a href="contact" class="nav-link" style="color:white;">Contacts</a></li>
                                <li><a href="about" class="nav-link" style="color:white;">À propos de nous</a></li>
                                <li><a href="Login" class="nav-link" style="color:white;">Login</a></li>
                            </ul>
                        </nav>
                    </div>

                </div>
            </div>
