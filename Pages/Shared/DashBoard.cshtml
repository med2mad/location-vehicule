<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tableau de Bord</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            padding-top: 56px;
        }
        .sidebar {
            height: 100vh;
            position: fixed;
            width: 250px;
            background: linear-gradient(to bottom,#495057,#1d2024 );
            padding-top: 20px;
            border-right: solid 5px #a0a5ad;
            transition: all 0.3s;
        }
        .sidebar a {
            padding: 10px 15px;
            text-decoration: none;
            font-size: 18px;
            color: #d1d1d1;
            display: block;
            transition: all 0.3s;
        }
        .sidebar a:hover {
            color: #ffffff;
            background-color: #495057;
        }
        .sidebar a i {
            margin-right: 10px;
        }
        .sidebar .active {
            color: #ffffff;
            background-color: #007bff;
        }
        .main-content {
            margin-left: 250px;
            padding: 20px;
        }
        .logo{
            width: 100%;
            max-width: 240px;
        }
         @@media (max-width: 768px) {
                .sidebar {
                    width: 0;
                    overflow: hidden;
                }
                .main-content {
                    margin-left: 0;
                }
                .sidebar.show {
                    width: 250px;
                }
            }
    </style>

    @RenderSection("Head", required: false)
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" id="sidebarToggle">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand ms-2" href="#">Tableau de Bord</a>
            @* <div class="d-flex align-items-center">
                <span class="text-white me-3">Admin</span>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown">
                        <i class="fas fa-user-circle"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#">Profil</a></li>
                        <li><a class="dropdown-item" href="#">Paramètres</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#">Déconnexion</a></li>
                    </ul>
                </div>
            </div> *@
        </div>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="text-center mb-4">
            <a href="index"><img src="~/logo.png" class="rounded-circle logo" alt="Logo"></a>
            <h5 class="text-white mt-2">Administration</h5>
        </div>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a href="/HomeBoard" class="nav-link @(ViewData["Title"]?.ToString() == "Accueil"?"active":"")">
                    <i class="fas fa-home"></i> Accueil
                </a>
            </li>
            <li class="nav-item">
                <a href="/Locations" class="nav-link @(ViewData["Title"]?.ToString() == "Réservations"?"active":"")">
                    <i class="fa-solid fa-calendar-days"></i> Réservations
                </a>
            </li>
            <li class="nav-item">
                <a href="/CarsList" class="nav-link @(ViewData["Title"]?.ToString() == "List de Véhicules"?"active":"")">
                    <i class="fas fa-car"></i> Liste de Véhicules
                </a>
            </li>
            <li class="nav-item">
                <a href="/AddCar" class="nav-link @(ViewData["Title"]?.ToString() == "Ajouter un Véhicule"?"active":"")">
                    <i class="fas fa-plus-circle"></i> Ajout de Véhicules
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link" style="padding-bottom:0;">
                    <i class="fa fa-cog"></i> Paramètres
                </a>
            </li>
            <li class="nav-item" style="margin-left:60px;">
                <a href="/ListeVilles" style="padding:0;" class="nav-link @(ViewData["Title"]?.ToString() == "Villes"?"active":"")">
                    Villes
                </a>
            </li>
            <li class="nav-item" style="margin-left:60px;">
                <a href="/ListQuartier" style="padding:0;" class="nav-link @(ViewData["Title"]?.ToString() == "Quartiers"?"active":"")">
                    Quartiers
                </a>
            </li>

            <li class="nav-item mt-4">
                <a href="/Index" class="nav-link text-danger">
                    <i class="fas fa-sign-out-alt"></i> Déconnexion
                </a>
            </li>
        </ul>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle sidebar on mobile
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('show');
        });
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Javascript Files
    ================================================== -->
    <script src="~/js/jquery-3.3.1.min.js" asp-append-version="true"></script>
    <script src="~/js/popper.min.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/owl.carousel.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery.sticky.js" asp-append-version="true"></script>
    <script src="~/js/jquery.waypoints.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery.animateNumber.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery.fancybox.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery.easing.1.3.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap-datepicker.min.js" asp-append-version="true"></script>
    <script src="~/js/aos.js" asp-append-version="true"></script>

    <script src="~/js/main.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>