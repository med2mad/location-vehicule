@page
@model RPtest.Pages.AddDepenseModel
@{
    Layout = "Dashboard";
    ViewData["Title"] = Model.IsNew ? "Ajouter une dépense" : "Modifier une dépense";
}

<h1>@ViewData["Title"]</h1>
<h4>Véhicule: @Model.VehiculeMarque @Model.VehiculeModel</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Depense.Id" />
            <input type="hidden" asp-for="Depense.VehiculeId" />
            <input type="hidden" asp-for="IsNew" />

            <div class="form-group">
                <label asp-for="Depense.Designation" class="control-label"></label>
                <input asp-for="Depense.Designation" class="form-control" />
                <span asp-validation-for="Depense.Designation" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Depense.Montant" class="control-label"></label>
                <input asp-for="Depense.Montant" type="number" class="form-control" />
                <span asp-validation-for="Depense.Montant" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Depense.Date" class="control-label"></label>
                <input asp-for="Depense.Date" class="form-control" type="date" />
                <span asp-validation-for="Depense.Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Depense.Description" class="control-label"></label>
                <textarea asp-for="Depense.Description" class="form-control"></textarea>
                <span asp-validation-for="Depense.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                @if (Model.IsNew)
                {
                    <button type="submit" class="btn btn-primary">Ajouter</button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                }
                <a asp-page="ListDepense" asp-route-vehiculeId="@Model.VehiculeId" class="btn btn-secondary">Annuler</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}