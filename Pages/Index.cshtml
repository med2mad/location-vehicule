<div class="site-section bg-light" style="padding-bottom:0; padding-top:10px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <h2 class="section-heading" style="margin-bottom:0; margin-top:20px"><strong>Meilleurs Choix du Moment</strong></h2>
            </div>
        </div>

        <div class="row">
            @foreach (var vehicule in Model.Vehicules)
            {
                <div class="col-lg-3 col-md-4 col-12 listing vehicule" style="border: solid 10px #f6f5f5">
                    <div class="listing d-block  align-items-stretch" style="padding:0;">
                        <a asp-page="Rent" asp-route-VehiculeId="@vehicule.Id">
                            <div class="listing-img h-100 mr-4" style="margin-top:0;">
                                <img src="images/@vehicule.Photo" alt="@vehicule.Photo" class="img-fluid">
                            </div>
                            <div class="listing-contents h-100">
                                <h3>@vehicule.Model.Marque @vehicule.Model.Nom</h3>
                                <div class="rent-price">
                                    <strong>@vehicule.Prix MAD</strong>
                                </div>
                                <div class="d-block d-md-flex  pb-3">
                                    <div class="listing-feature pr-3">
                                        <span class="caption">Bagage</span>
                                        <span class="number">@vehicule.Model.Bagage kg</span>
                                    </div>
                                    <div class="listing-feature pr-2">
                                        <span class="caption">Couleur</span>
                                        <span class="number">@vehicule.Couleur</span>
                                    </div>
                                    <div class="listing-feature pr-2">
                                    <span class="caption">Passagers</span>
                                        <span class="number">@vehicule.Model.Passagers</span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

