@section Head{
    <style>
        body{
            background-color: #f6f5f5 !important;
        }
        .listing {
            transition: transform 0.3s ease-in-out;
            margin-bottom:0;
            padding-bottom:0;
        }
        .listing:hover{
            transform: translateY(-10px);
        }
        .vehicule {
            opacity: 0; /* Initially hidden */
            transform: translateX(100px); /* Move right initially */
        }
        .containerHero {
            display: flex;
            align-items: center;
            justify-content: space-between;
            max-width: 600px;
            margin: 20px auto;
        }
        .hero {
            border-radius: 0px 0px 100px 100px;
            opacity: 0; /* Initially hidden */
            transform: translateY(-100px); /* Move left initially */
        }
    </style>
}

