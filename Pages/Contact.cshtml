@page
@model ContactModel
@{
    ViewData["Title"] = "Contacts";
}

    <div class="hero inner-page" style="background-image: url('images/header3.png');">

        <div class="container">
            <div class="row align-items-end ">
                <div class="col-lg-5">

                    <div class="intro">
                        <h1><strong>Contacts</strong></h1>
                    </div>

                </div>
            </div>
        </div>
    </div>



    <div class="site-section bg-light" id="contact-section">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-7 text-center mb-5">
                    <h2>Contactez Nous</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 mb-5">
                    <form method="post">
                        <div class="form-group row">
                            <div class="col-md-6 mb-4 mb-lg-0">
                                <input type="text" name="nom" class="form-control" placeholder="Nom" required>
                            </div>
                            <div class="col-md-6">
                                <input type="text" name="premom" class="form-control" placeholder="Prénom" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-6 mb-4 mb-lg-0">
                                <input type="email" name="email" class="form-control" placeholder="Adresse Email" required>
                            </div>
                            <div class="col-md-6">
                                <input type="text" name="tel" class="form-control" placeholder="N Téléphone" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12">
                                <textarea name="message" id="message" class="form-control" placeholder="Message" cols="30" rows="10" required></textarea>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-6 mr-auto">
                                <input type="submit" class="btn btn-block btn-primary text-white py-3 px-5" value="Send Message">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-lg-4 ml-auto">
                    <div class="bg-white p-3 p-md-5">
                        <h3 class="text-black mb-4">Contacts</h3>
                        <ul class="list-unstyled footer-link">
                            <li class="d-block mb-3">
                                <span class="d-block text-black">Address:</span>
                                <span>34 Street Name, City Name Here, United States</span>
                            </li>
                            <li class="d-block mb-3"><span class="d-block text-black">Phone:</span><span>+1 242 4942 290</span></li>
                            <li class="d-block mb-3"><span class="d-block text-black">Email:</span><span>info@yourdomain.com</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

