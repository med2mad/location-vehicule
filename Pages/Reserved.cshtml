@page
@model ReservedModel
@{
    ViewData["Title"] = "Reservé";
}

<div class="hero inner-page" style="background-image: url('images/hero_1_a.jpg');">
    <div class="container">
        <div class="row align-items-end ">
            <div class="col-lg-5">
                <div class="intro">
                    <h1 style="margin-top:100px;"><strong>Réservation effectuée.</strong></h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mb-5 mb-lg-0 order-lg-2">
                <img src="images/feature_01.png" alt="Image" class="img-fluid rounded">
            </div>
            <div class="col-lg-4 mr-auto">
                <h2>Félicitations</h2>
                <p>
                    Nous vous remercions pour votre réservation sur notre site !
                    Un e-mail avec les détails de votre achat a été envoyé à votre adresse Email.
                </p>
                <p>
                    Si vous avez la moindre question, n’hésitez pas à nous contacter. Nous avons hâte de vous offrir la meilleure expérience possible ! <br/>
                    À très bientôt.
                </p>
            </div>
        </div>
    </div>
</div>
